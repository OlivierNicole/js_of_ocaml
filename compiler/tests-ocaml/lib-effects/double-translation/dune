    (run node %{test}))
   (run cat)))
 (modes js))

(tests
 (build_if
  (>= %{ocaml_version} 5))
 (names
  assume_no_perform
  assume_no_perform_unhandled
  assume_no_perform_nested_handler)
 (libraries js_of_ocaml)
